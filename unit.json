{
    "listeners": {
        "*:8000": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": [
                    "*.css",
                    "*.js",
                    "*.ico",
                    "*.jpg",
                    "*.jpeg",
                    "*.png",
                    "*.gif",
                    "*.webp",
                    "*.svg",
                    "/favicon.ico",
                    "/robots.txt",
                    "/storage/*",
                    "/build/*",
                    "/vendor/*"
                ]
            },
            "action": {
                "share": "/var/www/html/public$uri"
            }
        },
        {
            "match": {
                "uri": "*"
            },
            "action": {
                "pass": "applications/laravel"
            }
        }
    ],
    "applications": {
        "laravel": {
            "type": "php",
            "root": "/var/www/html/public/",
            "script": "index.php"
        }
    }
}
